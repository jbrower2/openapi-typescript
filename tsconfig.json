{
	"compilerOptions": {
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"*": ["node_modules/*"]
		},
		"target": "ES5",
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"]
}
